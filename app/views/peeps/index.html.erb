<%= render 'shared/navbar' %>
<h1>Listing Peeps</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @peeps.each do |peep| %>
      <tr>
        <td><%= peep.name %></td>
        <td><%= link_to 'Show', peep %></td>
        <td><%= link_to 'Edit', edit_peep_path(peep) %></td>
        <td><%= link_to 'Destroy', peep, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Peep', new_peep_path %>
